---
import {
	type CollectionEntry,
	getCollection,
	getEntries,
	getEntry,
} from "astro:content";

import GlobalLayout from "@/layouts/Global.astro";
import BlogCard from "@/components/BlogCard.astro";
export async function getStaticPaths() {
	const categories = await getCollection("categories");
	return categories.map((category) => ({
		params: { slug: category.id },
		props: category,
	}));
}
type Props = CollectionEntry<"categories">;

const props = Astro.props;
const posts = await getCollection("blog", (post) =>
	post.data.categories.map((cate) => cate.id).includes(props.id),
);
---

<GlobalLayout image={props.data.hero}>
	<div class="mb-4 flex items-center space-x-1 text-sm text-muted-foreground">
		<a href="/blog">
			<div class="overflow-hidden text-ellipsis whitespace-nowrap">
				Category
			</div>
		</a>
		<svg
			width="15"
			height="15"
			viewBox="0 0 15 15"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
			class="h-4 w-4"
			><path
				d="M6.1584 3.13508C6.35985 2.94621 6.67627 2.95642 6.86514 3.15788L10.6151 7.15788C10.7954 7.3502 10.7954 7.64949 10.6151 7.84182L6.86514 11.8418C6.67627 12.0433 6.35985 12.0535 6.1584 11.8646C5.95694 11.6757 5.94673 11.3593 6.1356 11.1579L9.565 7.49985L6.1356 3.84182C5.94673 3.64036 5.95694 3.32394 6.1584 3.13508Z"
				fill="currentColor"
				fill-rule="evenodd"
				clip-rule="evenodd"></path></svg
		><a href={`/categories/${props.id}`}>
			<div class="font-medium text-foreground">{props.data.name}</div>
			</a>
	</div>
	<div class="flex items-center justify-between my-8">
		<div class="space-y-1">
			<h1 class="text-6xl font-bold tracking-tight">
				{props.data.name}
			</h1>
			<p class="text-lg text-muted-foreground">
				Explore the latest and greatest {props.data.name} blogs.
			</p>
		</div>
	</div>
	<div
		data-orientation="horizontal"
		role="none"
		class="shrink-0 bg-border h-[1px] w-full my-4"
	>
	</div>
	<div class="grid grid-cols-4 gap-4">
		{
			posts.map((post) => (
				<BlogCard
					title={post.data.title}
					description={post.data.description}
					slug={post.slug}
					heroImage={post.data.heroImage}
				/>
			))
		}
	</div>
</GlobalLayout>
