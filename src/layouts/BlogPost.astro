---
import { getEntry, type CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, heroImage, author } =
	Astro.props;
import GlobalLayout from "@/layouts/Global.astro";

const author_data = await getEntry("authors", author.id);
---


<GlobalLayout title={title} description={description} image={heroImage}>
	<slot />
</GlobalLayout>
