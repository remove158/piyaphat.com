---
type Props = {
    title: string;
    description: string;
    heroImage: string;
};

const props = Astro.props;
---

<div class="flex flex-col my-8">
    <div class="space-y-1">
        <h1 class="text-3xl font-bold tracking-tight">
            {props.title}
        </h1>
        <p class="text-md text-muted-foreground">
            {props.description}
        </p>
    </div>
</div>
<section id="heroImage " class="">
    <img
        src={props.heroImage}
        alt={props.title}
        width="full"
        class="aspect-w-screen max-h-96 mx-auto"
    />
</section>
