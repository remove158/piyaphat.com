---
import { getEntries, type CollectionEntry } from "astro:content";
import { ArrowUpRightFromSquare } from "lucide-react";
type Props = {
    items: Array<CollectionEntry<"categories">>;
};
const props = Astro.props;
---

<div class="border-t flex flex-col pt-4 space-y-4">
    <p class="text-md text-muted-foreground">หมวดหมู่ที่เกี่ยวข้อง</p>
    <div class="space-x-2">
        {
            props.items.map((cate) => (
                <a
                    rel="noreferrer"
                    class="inline-flex  no-underline items-center rounded-md border  px-2.5 py-0.5 text-[0.5em] font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 gap-1 hover:text-secondary-foreground/80"
                    href={`/categories/${cate.id}`}
                >
                    {cate.data.title}
                    <ArrowUpRightFromSquare size="8" />
                </a>
            ))
        }
    </div>
</div>
